@page
@model Teste.Pages.Empresas.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Empresa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpresasEntity.Nome" class="control-label"></label>
                <input asp-for="EmpresasEntity.Nome" class="form-control" />
                <span asp-validation-for="EmpresasEntity.Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="EmpresasEntity.CNPJ" class="control-label"></label>
                <input asp-for="EmpresasEntity.CNPJ" class="form-control" />
                <span asp-validation-for="EmpresasEntity.CNPJ" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Associados"></label>
                <select asp-for="SelectedAssociado" asp-items="Model.Associados" class="form-control" multiple></select>
                <span asp-validation-for="SelectedAssociado" class="text-danger"></span>
            </div>
           
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
