@page
@model Teste.Pages.Associados.CreateModel

@{
    ViewData["Title"] = "Novo Cadastro";
}

<h1>Novo Cadastro</h1>

<h4>Associado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AssociadosEntity.Nome" class="control-label"></label>
                <input asp-for="AssociadosEntity.Nome" class="form-control" />
                <span asp-validation-for="AssociadosEntity.Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AssociadosEntity.CPF" class="control-label"></label>
                <input asp-for="AssociadosEntity.CPF" class="form-control" />
                <span asp-validation-for="AssociadosEntity.CPF" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AssociadosEntity.Data_Nascimento" class="control-label"></label>
                <input asp-for="AssociadosEntity.Data_Nascimento" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-page="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
